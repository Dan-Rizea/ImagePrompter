@page "/"
@using Microsoft.EntityFrameworkCore.Metadata.Internal

@inject ISessionLogicService _sessionLogicService;
@inject SessionDataService _sessionDataService;

@code {
    /// <summary>
    /// Create a new session and navigate to it.
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        var initializedSession = await _sessionLogicService.InitializeSessionAsync();
        _sessionDataService.CurrentSession = initializedSession; 
        _sessionDataService.CurrentSessionVersionName = initializedSession.SessionVersions.FirstOrDefault()!.Name;
    }
}